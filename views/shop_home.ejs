              data-carousel='{"nav": false,"mouseDrag": true, "gutter": 32, "loop": true, "responsive": {"0": {"items": 1}, "768": {"items": 2}, "992": {"items": 2}, "1200": {"items": 3}}}'>
              <% list.forEach(item=> { %>
                <div>
                  <div class="product">
                    <figure class="product-image">
                      <a href="http://localhost:3000/shop/chi-tiet-san-pham/<%- item._id %> ">
                        <img src="/public/image/<%- item.image %> " alt="<%- item.name %>" />

